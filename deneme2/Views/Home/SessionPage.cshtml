
@{
    ViewBag.Title = "SessionPage";
}

@if(Session["Kullanici"]==null)
{
<form action="/Home/SessionPage" method="post">
    <div class="form-group">
        <label>Session Username</label>
        <input class="form-control" type="text" name="kullaniciAd" value=""/>
    </div>
    <div class="form-group">
        <label>Session Password</label>
        <input class="form-control" type="password" name="kullaniciSifre" value=""/>
    </div>
    <div class="form-group">
        <input class="btn btn-default" type="submit" value="Open A Session"/>
    </div>
</form>
}
else{
    @Session["Kullanici"].ToString()
    @:Welcome Back!
}